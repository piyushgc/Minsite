        .container {
            padding:120px 50px;
        }
        .container{
            padding: 170px 50px 0;
            background:url(../images/yoga-6723315_1280.jpg);
            background-size:cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            width: 100%;
            position: relative;
        }
        .top-heading{
            font-weight:normal;
            font-size:40px;
        }
        .yoga{
            font-weight: bold;
            color: #464444;
        }
        .main-container{
            margin-top: 20px;
            margin-bottom: 9px;
        }
        .main-title{
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            color: rgb(5, 6, 6);
            margin-bottom: 20px;
        }
        .card-content{
            width: 70%;
            display: flex;
            justify-content:space-around;
            margin: 0 auto;
        }
        
        .card{
            padding: 2rem 1rem;
            background: #fff;
            position: relative;
            display: flex;
            align-items: flex-end;
            box-shadow: 0px 7px 10px rgb(0,0,0,0.5);
            transition: 0.5s ease-in-out;
        }
        .card:hover{
            transform: translateY(20px);
        }

        .card:before{
            content:"";
            position: absolute;
            top: 0;
            left: 0;
            display: block;
            width: 100%;
            height: 300px;
            background: linear-gradient(to bottom, rgba(0,176,155,0.5),rgba(150,201,61,1));
            z-index: 2;
            transition: 0.5s all;
            opacity: 0;
        }
         .card:hover::before{
            opacity: 1;
         }
         .card img{
            width: 100%;
            height: 300px;
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
         }

         .card .info{
            position: relative;
            z-index: 3;
            color: #fff;
            opacity: 0;
            transform: translateY(30px);
            transition: 0.5s all;
         }
         .card:hover .info{
            opacity: 1;
            transform: translateY(0px);
         }
         .card .info h1{
            margin: 0;
            font-size: 30px;
         }
         .card .info p{
            letter-spacing: 1px;
            font-size: 15px;
            margin-top: 8px;
            margin-bottom: 20px;
         }
        
        .banner-img{
            width: 100%;
            height: 700px;
            padding: 130px 0px 0px 0px;
        }
        .banner-img-container{
            position: relative;
        }
        .text-banner{
            position: absolute;
            top: 25%;
            color: #fff;
            padding: 20px;
        }
        .text-banner h1{
            font-size: 60px;
            margin-left: 20px;
        }
        
        .text-banner p{
            padding: 0px 20px 0px 20px;
            margin-right: 700px;
        }
